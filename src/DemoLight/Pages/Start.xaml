<Page x:Class="DemoLight.Pages.Start"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoLight.Pages"
      xmlns:vm="clr-namespace:DemoLight.ViewModels.Vms"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Start" Loaded="Page_Loaded">
    <Page.DataContext>
        <vm:StartViewModel />
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label  HorizontalAlignment="Center" Content="Подтвердите, что вы человек" FontWeight="Bold"/>
        <Image Grid.Row="1" Source="{Binding Captcha}" Width="120" Height="48" />
        <TextBox Grid.Row="1" x:Name="TxtBox"
                 Width="120" Height="24" Margin="0,100,0,0"
                 Text="{Binding Code, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Grid.Row="1" Width="{Binding ElementName=TxtBox, Path=Width}"
                Height="{Binding ElementName=TxtBox, Path=Height}"
                Margin="0,166,0,0" />
    </Grid>
</Page>
